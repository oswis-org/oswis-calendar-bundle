{% extends '@OswisOrgOswisCore/web/page-skeleton-default.html.twig' %}

{% block html_description %}{% if message|default %}{{ message }}{% else %}{{ title }}{% endif %}{% endblock %}
{% block og_description %}{{ block('html_description') }}{% endblock %}

{% block body_content %}
    <main class="container" id="main-content-container">
        <div class="row">
            <div class="col-lg-12 registration-output">
                {% if type|default %}
                    <header><h2 class="text-uppercase {{ type }}">{{ title }}</h2></header>
                    {% if message|default %}
                        <p>{{ message }}</p>
                    {% endif %}
                {% else %}
                    <header><h2 class="text-uppercase">Nastala chyba.</h2></header>
                    <p>Kontaktujte nás, prosím.</p>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}

{% block body_breadcrumbs %}
    {% if event|default %}
        {% include '@OswisOrgOswisCalendar/web/parts/event-subpages-breadcrumbs.html.twig' %}
    {% endif %}
{% endblock body_breadcrumbs %}
