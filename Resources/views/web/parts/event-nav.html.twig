<nav>
    <div class="badges clearfix">
        <!-- <a href="{#{{ path('faq') }}#}" class="badge badge-warning">Časté dotazy</a> -->
        {% for navEvent in navEvents|default %}
            <a href="{{ path('zakjakub_oswis_calendar_web_event', {'slug': navEvent.slug}) }}"
               class="badge {{ event is defined and navEvent.slug == event.slug ? 'badge-success' : 'badge-light' }}">
                {% if navEvent.year and navEvent.startYear %}
                    {{ navEvent.startYear }}
                {% elseif navEvent.batch and navEvent.seqId %}
                    {{ navEvent.seqId }}
                {% else %}
                    {{ navEvent.getShortName }}
                {% endif %}
            </a>
        {% endfor %}
    </div>
</nav>
