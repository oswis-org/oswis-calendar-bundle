{% set e = form.vars.value.event|default(event|default) %}
<header>
    <h2 class="text-uppercase mb-2">Nový účastník</h2>

    {% include '@OswisOrgOswisCalendar/web/parts/event-participant-registration-range-preview.html.twig' with {'event': e} %}

    {% if e.subEvents|default|length > 0 %}
        <div class="mt-2 mb-2">
            <p><strong>Jsou dostupné také dílčí akce:</strong></p>
            {% include '@OswisOrgOswisCalendar/web/parts/event-sub-events-list.html.twig' with {'subEvents': e.subEvents|default} %}
        </div>
    {% endif %}
</header>
{{ form_start(form) }}
{{ form_widget(form) }}
{{ form_end(form) }}
<footer class="mt-5 pt-5 mb-4">
    {% include '@OswisOrgOswisCalendar/web/parts/event-preview.html.twig' with {'event': e} %}
</footer>