<meta itemprop="name" content="{{ event.name }}"/>
<link itemprop="url" href="{{ absolute_url(path('oswis_org_oswis_calendar_web_event', {'slug': event.slug})) }}"/>
<meta itemprop="startDate" content="{{ event.startDate|date("c") }}"/>
<meta itemprop="endDate" content="{{ event.endDate|date("c") }}"/>
{% if event.place(true)|default %}
    <div itemprop="event.location" itemscope itemtype="http://schema.org/Place">
        {% if event.place(true).name|default %}
            <meta itemprop="name" content="{{ event.place(true).name }}"/>
        {% endif %}
        <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
            {% if event.place(true).name|default %}
                <meta itemprop="name" content="{{ event.place(true).name }}"/>
            {% endif %}
            {% if event.place(true).streetAddress|default %}
                <meta itemprop="streetAddress" content="{{ event.place(true).streetAddress }}"/>
            {% endif %}
            {% if event.place(true).city|default %}
                <meta itemprop="addressLocality" content="{{ event.place(true).city }}"/>
            {% endif %}
            {% if event.place(true).postalCode|default %}
                <meta itemprop="postalCode" content="{{ event.place(true).postalCode }}"/>
            {% endif %}
            {% if event.place(true).city|default %}
                <meta itemprop="addressRegion" content="{{ event.place(true).city }}"/>
            {% endif %}
            {% if event.place(true).url|default %}
                <!--suppress HtmlUnknownAttribute -->
                <meta itemprop="url" href="{{ event.place(true).url }}" content="{{ event.place(true).url }}"/>
            {% endif %}
            <meta itemprop=Country" content="CZ"/>
        </div>
    </div>
{% endif %}
{% if event.organizer.contact|default %}{# TODO #}
    <div itemprop="organizer" itemscope itemtype="http://schema.org/Organization">
        <meta itemprop="name" content="{{ event.organizer.contact.name|default('') }}"/>
        <link itemprop="image" href="{{ absolute_url(asset('img/web/og-image.jpg'))|default('') }}"/>
        <!--<link itemprop="image" href="https://www.seznamovakup.cz/img/web/og-image.jpg"/>-->
    </div>
{% endif %}
